<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item_back" >

    <ImageView
        android:id="@+id/image_ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/myinfo_list_1" />

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@+id/image_ico">

        <TextView
            android:id="@+id/txt_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:text="21212"
            android:textColor="@color/my_color_home_title"
            android:textSize="@dimen/fontsize32px" />
        <TextView
            android:id="@+id/txt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_1"
            android:layout_below="@+id/txt_1"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="0dp"
            android:text="移动信联宝是什么"
            android:textColor="@color/my_color_9"
            android:textSize="@dimen/fontsize28px" />
    </RelativeLayout>

    <View
        android:id="@+id/view_line"
        style="@style/list_line_color"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/image_ico"
        android:layout_below="@+id/layout_1" />

</RelativeLayout>