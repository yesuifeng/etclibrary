<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_back"
    android:orientation="vertical" >

    <View
        android:id="@+id/linetop"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/txt_1"
        style="@style/text_defult_title_000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linetop"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="9dp"
        android:text="text" />

    <TextView
        android:id="@+id/txt_3"
        style="@style/text_defult_content_afafaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_1"
        android:layout_marginLeft="10dp"
        android:text="2015年9月18日" />

    <TextView
        android:id="@+id/txt_2"
        android:textColor="@color/my_color_7"
        android:textSize="@dimen/fontsize28px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:text="text" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/txt_2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#c0c0c0" />

    <RelativeLayout
        android:id="@+id/check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:background="@drawable/list_item_back"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:text="立即查看"
            android:textColor="#666666"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/jiantou_right" />
    </RelativeLayout>

    <View
        android:id="@+id/linebottom"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/check"
        android:background="#c0c0c0" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/linebottom"
        android:background="#f0f0f0" />

</RelativeLayout>