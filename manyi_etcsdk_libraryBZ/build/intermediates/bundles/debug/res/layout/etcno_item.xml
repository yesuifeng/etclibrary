<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_back" >

    <TextView
        android:id="@+id/txtEtcNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/jiantou_right"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="111"
        android:paddingTop="10dp"
        android:textColor="@color/my_color_5"
        android:textSize="@dimen/fontsize36px" />
<TextView
        android:id="@+id/txtEtcCardNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@+id/txtEtcNo"
        android:text="111"
        android:textColor="@color/my_color_7"
        android:textSize="@dimen/fontsize28px" />
    <ImageView
        android:id="@+id/image_ico"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/gouhao"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txt_2"
        android:layout_width="0px"
        android:layout_height="wrap_content" />

</RelativeLayout>