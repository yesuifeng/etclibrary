<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_back" >

    <ImageView
        android:id="@+id/image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:id="@+id/txt_1"
        style="@style/my_text_defult_title_000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/image_1"
        android:text="推荐好友" />

    <TextView
        android:id="@+id/txt_2"
        style="@style/text_defult_content_898989"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_1"
        android:layout_below="@+id/txt_1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:text="4月6日  10:39" />

    <TextView
        android:id="@+id/txt_3"
        style="@style/text_defult_title_717171"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text="+100分"
        android:textColor="#f98700" />

</RelativeLayout>