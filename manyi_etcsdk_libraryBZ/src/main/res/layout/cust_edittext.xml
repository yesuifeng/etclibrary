<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent" >

    <TextView
        android:id="@+id/txt_lable"
        android:textColor="@color/my_color_5"
        android:textSize="@dimen/fontsize32px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/transparent"
        android:gravity="center_vertical" />

    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/image_delete"
        android:layout_toRightOf="@+id/txt_lable"
        android:background="@color/transparent"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:textColor="@color/my_color_7"
        android:textSize="@dimen/fontsize28px"
        android:textColorHint="@color/my_color_7" >
    </EditText>

    <ImageView
        android:id="@+id/image_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/image_delete"
        android:src="@drawable/edit_show_pw_off"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/edit_delete"
        android:visibility="gone" />

</RelativeLayout>