<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <stroke
        android:width="5dip"
        android:color="@color/my_color_9" />
    <!-- 描边 ：边框宽度与颜色 -->
    <padding
        android:bottom="10dp"
        android:left="50dp"
        android:right="50dp"
        android:top="10dp" />
    <!-- 主要内容的padding 文字距离上下左右的距离 -->
    <corners
        android:bottomLeftRadius="5dip"
        android:bottomRightRadius="5dip"
        android:topLeftRadius="5dip"
        android:topRightRadius="5dip" />
    <!-- 圆角的半径  也可以统一设置半径 android:radius="9dip" -->

    <gradient
        android:angle="270"
        android:endColor="@color/my_color_9"
        android:startColor="@color/my_color_9" />
    <!-- 渐变 -->
    <solid android:color="@color/my_color_9" />
    <!-- 没有描边的中间部分 -->
    <!-- solid 与  gradient 只能显示在代码最后那个 -->

</shape>