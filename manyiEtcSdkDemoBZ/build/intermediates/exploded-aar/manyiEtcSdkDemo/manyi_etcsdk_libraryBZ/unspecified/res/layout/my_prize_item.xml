<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/myprizeTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/my_color_3" 
        android:visibility="gone"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="我的奖品"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="9dp"
            android:textColor="@color/my_color_5"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/prizeNameItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="13dp"
            android:paddingTop="13dp"
            android:text="一等奖一瓶汽水"
            android:textColor="@color/my_color_5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/schoolWillItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="已派奖"
            android:textColor="@color/my_color_9"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/my_color_7" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获奖时间:"
                android:textColor="@color/my_color_6"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/prizeTimeItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-10-23"
                android:textColor="@color/my_color_6"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/myprizeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="9dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/summitbutbg"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="领奖"
            android:textColor="@color/my_color_white"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/myprizeBg"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/my_color_3" />

</LinearLayout>