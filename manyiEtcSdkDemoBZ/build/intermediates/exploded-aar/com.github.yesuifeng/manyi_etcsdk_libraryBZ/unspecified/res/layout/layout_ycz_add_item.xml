<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:background="@android:color/white" >

    <TextView
        android:id="@+id/cph"
        style="@style/text_defult_title_000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="鲁A33333" />

    <TextView
        android:id="@+id/text_3"
        style="@style/text_defult_content_898989"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignLeft="@+id/cph"
        android:layout_below="@+id/cph"
        android:layout_marginTop="1dp"
        android:text="卡号：" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/chongzhiyonghu_ico" />

    <TextView
        android:id="@+id/card_no"
        style="@style/text_defult_content_898989"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/text_3"
        android:layout_below="@+id/cph"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/text_3"
        android:text="1234567890111111" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/money_jie"
        android:gravity="center"
        android:text="￥"
        android:textColor="#ff602e"
        android:textSize="18sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/money_jie"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/delete"
        android:gravity="center"
        android:text="20000"
        android:textColor="#ff602e"
        android:textSize="18sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/delete"
        android:layout_width="80dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dip"
            android:src="@drawable/ltk_delete" />
    </RelativeLayout>

</RelativeLayout>