<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:id="@+id/line_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_yuanjiao_dioa"
        android:orientation="vertical" >
    <TextView
        android:id="@+id/text_1"
        android:textSize="@dimen/fontsize40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="TextView"
        android:textColor="@color/my_color_5" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_line"
        style="@style/dialog_line_color"
        android:background="#e4e4e4"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/line_1" />

    <LinearLayout
        android:id="@+id/layout_button"
        android:layout_below="@+id/txt_content"
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:background="@drawable/bg_yuanjiaobottom_dioa"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/button1"
            style="@style/text_tanchuang"
          android:background="@drawable/button_login_dia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
             android:layout_marginTop="8dp"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="8dp"
             android:paddingTop="10dp"
             android:paddingBottom="10dp"
             android:textColor="@color/my_color_white"
            android:text="确认"
           />

        <Button
            android:id="@+id/button2"
            style="@style/text_tanchuang"
            android:background="@drawable/button_login_dia"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
             android:layout_marginTop="8dp"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="8dp"
             android:paddingTop="10dp"
             android:paddingBottom="10dp"
             android:textColor="@color/my_color_white"
            android:text="取消"
              />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/layout_button"
        android:layout_below="@+id/layout_button"
        android:layout_marginLeft="15dp"
        android:text=""
        android:visibility="invisible" />

    <TextView
        android:background="@color/my_color_white"
        android:id="@+id/txt_content"
        style="@style/text_defult_title_000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_line"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="今天"
        android:visibility="gone" />

</RelativeLayout>