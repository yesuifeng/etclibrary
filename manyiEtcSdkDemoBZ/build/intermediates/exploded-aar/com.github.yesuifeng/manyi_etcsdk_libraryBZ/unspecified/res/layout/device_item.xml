<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_back"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/txt_devices_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="蓝牙设备"
            android:textColor="@color/my_color_5"
            android:textSize="@dimen/fontsize28px" />

        <TextView
            android:id="@+id/check_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt_devices_position"
            android:text="ZF11259080123456789123"
            android:textColor="@color/my_color_home_title"
            android:textSize="@dimen/fontsize28px" />

        <TextView
            android:id="@+id/bluetoothMac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/check_text"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt_devices_position"
            android:text="fdsfsdf3"
            android:layout_marginTop="5dp"
            android:textColor="@color/my_color_home_description"
            android:textSize="@dimen/fontsize28px" />
    </RelativeLayout>

</LinearLayout>